\RequirePackage{gloss}


% This just changes the glossary page such that it uses dots like the TOC,
% LOA, ...
\newcommand{\justdottedline}{
    \leaders\hbox{$\m@th \mkern \@dotsep mu\hbox{.}\mkern \@dotsep mu$}\hfill
}
\renewcommand\glosspage[1]{\justdottedline#1}



% This makes sure that the glossary title is printed in the same format as
% things like the listoffigures and so.  This MUST match in style with what is
% in the rac.sty file for listoffigures, ...
\def\gls@section{%
 \newpage\small\normalsize
 \@restonecolfalse\if@twocolumn\@restonecoltrue\onecolumn\fi
 \hbox{ }
 \vspace{0.5in}
 \centerline{\large\bf {\MakeUppercase\gls@title}}
 \vspace{0.7in}

 \@mkboth{\MakeUppercase\gls@title}{\MakeUppercase\gls@title}%
 \addcontentsline{toc}{chapter}{\MakeUppercase\gls@title}
}

